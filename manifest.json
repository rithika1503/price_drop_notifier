{
  "manifest_version": 3,
  "name": "Amazon Price Monitor",
  "version": "1.0.0",
  "description": "Track Amazon product prices and get notified when prices drop",
  
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "background",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://amazon.com/*",
    "https://*.amazon.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*/dp/*",
        "https://amazon.com/*/dp/*",
        "https://*.amazon.com/*/dp/*"
      ],
      "js": ["content.js"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Amazon Price Monitor",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}