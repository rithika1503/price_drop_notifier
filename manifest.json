{
    "manifest_version": 3,
    "name": "Amazon Price Tracker and Scraper",
    "version": "2.0",
  
    "background": {
      "service_worker": "background.js"
      
    },
  
    "action": {
      "default_popup": "popup.html",
      "default_icon": {"128": "icon.png"}
    },
    
    "icons": {
      "128": "icon.png"
    },

    "permissions": [
      "tabs",
      "scripting",
      "activeTab",
      "notifications"
    ],
  
    "host_permissions": [
      "<all_urls>"
    ],
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["packages/jquery.min.js", "content.js"]
      }
    ],
  
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
  }
  